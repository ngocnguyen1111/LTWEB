@model myweb.Models.PRODUCT

@{
    ViewBag.Title = "Chitietsp";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center">Details Product</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name Product:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TenSP)
        </dd>
        <dt>
            Price:
        </dt>
        <dd>
            @String.Format("{0:0,0}", Model.Giaban) VND
        </dd>

        <dt>
            Description:
        </dt>
        <dd style="width:600px; text-align:justify">
            @Html.DisplayFor(model => model.Mota)
        </dd>

        <dt>
           Images:
        </dt>
        <dd>
            <img src="@Url.Content("~/Content/images/"+  Model.Anh)" width="120px" />
        </dd>
        <dt>
           Update in:
        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.Ngaycapnhat)
        </dd>
        <dt>
           Amount:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Soluongton)
        </dd>
        <dt>
            Kinds of Product:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LOAI.TenLoai)
        </dd>
        <dt>
            Brands:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BRAND.TenBrands)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Suasp", new { id = Model.MaSP }) |
    @Html.ActionLink("Back to List", "Index")
</p>
