@using myweb.Models
@using PagedList.Mvc
@model PagedList.PagedList<PRODUCT>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";

}


<div class="mainmenu-area">
    <div class="container">
        <div class="row">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li><a href="@Url.Action("Category","Home")">Category</a></li>
                    <li><a href="#">Single product</a></li>
                    <li><a href="@Url.Action("Contact","Home")">Contact</a></li>
                    <li><a href="@Url.Action("GioHang", "GioHang")">Cart</a></li>
                </ul>
            </div>
        </div>
    </div>
</div> <!-- End mainmenu area -->

<div class="slider-area">
    <!-- Slider -->
    <div class="block-slider block-slider4">
        <ul class="" id="bxslider-home4">
            <li>
                <img src="/Content/images/Aro_All_Sports_Banner.jpg" alt="Slide" />
                <div class="caption-group">
                    <h2 class="caption title">
                        <span style="color:orangered" class="primary"><strong>Sports High Quality</strong></span>
                    </h2>
                </div>
            </li>
            <li>
                <img src="~/Content/images/banner2.jpg" alt="Slide">
                <div class="caption-group">
                    <h2 class="caption title">
                        <span style="color:orangered" class="primary"><strong>GOOD FOR HEALTHY</strong></span>
                    </h2>
                </div>
            </li>
            <li>
                <img src="~/Content/images/banner3.jpg" alt="Slide">
            </li>
            <li>
                <img src="~/Content/images/banner4.jpg" alt="Slide">
                <div class="caption-group">
                    <h4 style="color:orangered" class="caption subtitle"><strong>New & Hot</strong></h4>
                </div>
            </li>
        </ul>
    </div>
    <!-- ./Slider -->
</div> <!-- End slider area -->
<div class="promo-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-4">
                <div class="single-promo promo1">
                    <i class="fa fa-star"></i>
                    <p>High Quality</p>
                </div>
            </div>
            <div class="col-md-4 col-sm-4">
                <iframe width="360" height="136" src="https://www.youtube.com/embed/NnOU_KqI45k?rel=0&autoplay=1" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
            <div class="col-md-4 col-sm-4">
                <div class="single-promo promo2">
                    <i class="fa fa-truck"></i>
                    <p>Free shipping</p>
                </div>
            </div>
            
           
        </div>
    </div>
</div> <!-- End promo area -->
<!-- Product in home -->
<div class="maincontent-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="latest-product">
                    <div class="product-big-title-area">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="product-bit-title text-center">
                                        <h2>NEW PRODUCT</h2>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                   
                    <div class="product-carousel">
                        @foreach (var sp in Model)
                        {
                            <div class="single-product">
                                <div class="product-f-image">
                                    <li>
                                        <a href="@Url.Action("SingleProduct", "Home", new { id = sp.MaSP })">
                                            <img alt="@sp.TenSP" src="~/Content/images/@sp.Anh" width="200px" />
                                        </a>
                                    </li>
                                    <div class="product-hover">
                                        <div id="cart">
                                            <a href="@Url.Action("ThemGiohang", "GioHang", new { @iMaSP= @sp.MaSP, @strURL = Request.Url.ToString() })" class="add-to-cart-link"><i class="fa fa-shopping-cart"></i> Add to cart</a>
                                        </div>
                                        <a href="@Url.Action("SingleProduct","Home" ,new { id = sp.MaSP })" class="view-details-link">
                                            <i class="fa fa-link"></i> See details
                                        </a>
                                        <img alt="@sp.TenSP" src="~/Content/images/@sp.Anh" />
                                    </div>
                                </div>
                                <h2>
                                    <a href="@Url.Action("SingleProduct","Home", new { id = sp.MaSP })">
                                        <span>
                                            @sp.TenSP
                                        </span>
                                    </a>
                                </h2>
                                <div class="product-carousel-price">
                                    @String.Format("{0:0,0}", @sp.Giaban) VND
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End main content area -->
<div class="brands-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="brand-wrapper">
                    <div class="brand-list">
                        <img src="~/Content/images/adidas-trefoil-logo.jpg" alt="">
                        <img src="~/Content/images/asics-logo.gif" alt="">
                        <img src="~/Content/images/fila-logo.gif" alt="">
                        <img src="~/Content/images/new-balance-logo.gif" alt="">
                        <img src="~/Content/images/reebok-logo.gif" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End brands area -->
@* Tao liên kết các trang  *@
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;

