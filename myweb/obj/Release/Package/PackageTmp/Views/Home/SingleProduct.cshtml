@using myweb.Models;
@model PRODUCT
@{
    ViewBag.Title = "SingleProduct";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="mainmenu-area">
    <div class="container">
        <div class="row">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li><a href="@Url.Action("Category","Home")">Category</a></li>
                    <li class="active"><a href="@Url.Action("SingleProduct","Home")">Single product</a></li>
                    <li><a href="@Url.Action("Contact","Home")">Contact</a></li>
                    <li><a href="@Url.Action("GioHang", "GioHang")">Cart</a></li>
                </ul>
            </div>
        </div>
    </div>
</div> <!-- End mainmenu area -->
<div class="product-content-right">
    <div class="product-breadcroumb">
        <a href="@Url.Action("Index","Home")">Home</a>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="product-images">
                <div class="product-main-img">
                    <img alt="@Model.TenSP" src="~/Content/images/@Model.Anh" width="350px" height="auto" />
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="product-inner">
                <h2 class="product-name">@Model.TenSP</h2>
                <div class="product-inner-price">
                    <span>@String.Format("{0:0,0}", @Model.Giaban) VND</span>
                </div>
                <div id="cart">
                    <a href="@Url.Action("ThemGiohang","GioHang", new { @iMaSP = @Model.MaSP, @strURL = Request.Url.ToString() })" class="add_to_cart_button">Add to cart</a>
                </div>
                <div role="tabpanel">
                    <ul class="product-tab" role="tablist">
                        <li role="presentation" class="active"><a href="" aria-controls="home" role="tab" data-toggle="tab">Description</a></li>
                    </ul>
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="home">
                            <p>@Model.Mota</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
