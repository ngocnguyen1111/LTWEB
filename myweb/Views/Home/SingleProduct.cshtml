@using myweb.Models;
@model PRODUCT
<style type="text/css">
    #cart a {
        clear: both;
        background-color: red;
        color: white;
        width: 120px;
        height: 35px;
        display: block;
        float: right;
        text-align: center;
        padding-top: 10px;
        text-decoration: none;
        font-weight: bold;
    }

        #cart a:hover {
            background-color: gray;
            color: red;
        }
</style>
@{
    ViewBag.Title = "SingleProduct";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="mainmenu-area">
    <div class="container">
        <div class="row">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li><a href="@Url.Action("Category","Home")">Category</a></li>
                    <li><a href="@Url.Action("Contact","Home")">Contact</a></li>
                    <li><a href="@Url.Action("Giohang", "GioHang")">Cart</a></li>
                </ul>
            </div>
        </div>
    </div>
</div> <!-- End mainmenu area -->
<div class="product-content-right">
    <div class="product-breadcroumb">
        <a href="@Url.Action("Index","Home")">Home</a>
        <a href="@Url.Action("Category","Home")">Category Name</a>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="product-images">
                <div class="product-main-img">
                    <img alt="@Model.TenSP" src="~/Content/images/@Model.Anh" width="350px" height="auto"/>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="product-inner">
                <h2 class="product-name">@Model.TenSP</h2>
                <div class="product-inner-price">
                    <span>@Model.Giaban VNĐ</span>
                </div>
                <div id="cart">
                        <a href="@Url.Action("ThemGiohang","GioHang", new { @iMaSP = @Model.MaSP, @strURL = Request.Url.ToString() })" class="add_to_cart_button">Add to cart</a>
                </div>
                <div class="product-inner-category">
                    <p>Category: <a href="">Summer</a>. Tags: <a href="">awesome</a>, <a href="">best</a>, <a href="">sale</a>, <a href="">shoes</a>. </p>
                </div>

                <div role="tabpanel">
                    <ul class="product-tab" role="tablist">
                        <li role="presentation" class="active"><a href="" aria-controls="home" role="tab" data-toggle="tab">Description</a></li>
                        <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Reviews</a></li>
                    </ul>
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="home">
                            <p>@Model.Mota</p>
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="profile">
                            <h2>Reviews</h2>
                            <div class="submit-review">
                                <p><label for="name">Name</label> <input name="name" type="text"></p>
                                <p><label for="email">Email</label> <input name="email" type="email"></p>
                                <div class="rating-chooser">
                                    <p>Your rating</p>

                                    <div class="rating-wrap-post">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                    </div>
                                </div>
                                <p><label for="review">Your review</label> <textarea name="review" id="" cols="30" rows="10"></textarea></p>
                                <p><input type="submit" value="Submit"></p>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
