@using myweb.Models
@using PagedList.Mvc;
@model PagedList.PagedList<myweb.Models.PRODUCT>

@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="mainmenu-area">
    <div class="container">
        <div class="row">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li class="active"><a href="@Url.Action("Category","Home")">Category</a></li>
                    <li><a href="@Url.Action("SingleProduct","Home")">Single product</a></li>
                    <li><a href="@Url.Action("Contact","Home")">Contact</a></li>
                    <li><a href="@Url.Action("GioHang", "GioHang")">Cart</a></li>
                </ul>
            </div>
        </div>
    </div>
</div> <!-- End mainmenu area -->
<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Shop</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="single-product-area">
    <div class="zigzag-bottom">
        <div class="container">
            <div class="row">
                @foreach (var sp in Model)
            {
                    <div class="col-md-3 col-sm-6">
                        <div class="single-shop-product">
                            <div class="product-upper">
                                <a href="@Url.Action("SingleProduct", "Home", new { id = sp.MaSP })">
                                    <img alt="@sp.TenSP" src="~/Content/images/@sp.Anh" width="250px" />
                                </a>
                            </div>
                            <h2>
                                <a href="@Url.Action("SingleProduct", "Home", new { id = sp.MaSP })">
                                    <span>
                                        @sp.TenSP
                                    </span>
                                </a>
                            </h2>
                            <div class="product-carousel-price">
                                @sp.Giaban
                            </div>
                            <div id="cart">
                                <a href="@Url.Action("ThemGiohang", "GioHang", new { @iMaSP = @sp.MaSP, @strURL = Request.Url.ToString() })" class="add_to_cart_button"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;
            <div class="MenuTrang">
                @Html.PagedListPager(Model, page => Url.Action("Category", new { page = page }))
            </div>






