@model myweb.Models.PRODUCT

@{
    ViewBag.Title = "Xoasp";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2style="text-align:center">CONFIRM INFORMATION WILL DELETE</h2style="text-align:center">

<h3>Are you sure you want to delete this?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal"
            <dt>
                Name Product:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TenSP)
            </dd>
            <dt>
                Price:
            </dt>
            <dd>
                @String.Format("{0:0,0}", Model.Giaban) VND
            </dd>

            <dt>
                Description:
            </dt>
            <dd style="width:600px; text-align:justify">
                @Html.DisplayFor(model => model.Mota)
            </dd>

            <dt>
                Images:
            </dt>
            <dd>
                <img src="@Url.Content("~/Content/images/"+  Model.Anh)" width="120px" />
            </dd>
            <dt>
                Update in:
            <dd>
                @String.Format("{0:dd/MM/yyyy}", Model.Ngaycapnhat)
            </dd>
            <dt>
                Amount:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Soluongton)
            </dd>
            <dt>
                Kinds of Product:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.LOAI.TenLoai)
            </dd>
            <dt>
                Brands:
            </dt>
            <dd>
                @Html.DisplayFor(model => model.BRAND.TenBrands)
            </dd>

        </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Sanpham")
        </div>
    }
</div>
