<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sports Store</title>

    <!-- Google Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,200,300,700,600' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,300' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Raleway:400,100' rel='stylesheet' type='text/css'>

    <!-- Bootstrap -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/Content/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/responsive.css" rel="stylesheet" />
    <link href="~/Content/mystyle.css" rel="stylesheet" />
    <link href="~/Content/custom.css" rel="stylesheet" />
    <link href="~/Content/lastest.css" rel="stylesheet" />
    <link href="~/Content/final.css" rel="stylesheet" />
    
</head>

<body>
    <div class="header-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="user-menu">
                        <ul>
                            <li><a href="@Url.Action("Login", "Admin")"><i class="fa fa-user"></i>Admin</a></li>
                            <li><a href="@Url.Action("GioHang", "GioHang")"><i class="fa fa-user"></i> My Cart</a></li>
                            <li><a href="@Url.Action("Dangnhap", "User")"><i class="fa fa-user"></i> Login</a></li>
                            <li><a href="@Url.Action("Dangxuat", "User")"><i class="fa fa-user"></i>Logout</a></li>
                            <li><a>@Html.Action("ID", "User")</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End header area -->

    <div class="site-branding-area">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="logo"
                         >
                        <h1><a href="@Url.Action("Index","Home")"><img src="~/Content/images/logo.jpg"width="165px"></a></h1>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="shopping-item">
                        @Html.Action("GiohangPartial", "Giohang")
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- End site branding area -->
    <div>@RenderBody()</div>
    <div class="footer-top-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="footer-about-us">
                        <h2><span>Emirates Sports Store About</span> </h2>
                        <p>
                            Emirates Sports Store is part of the Independent Sports Retailers Alliance ( ISRA ) group which is an independent group of like minded local retail sports shops who are always looking to better their shops for the benefit of the local customer. The group has a strong membership with over 40 shops in different locations. Buying as a group and hence more buying power which is to the benefit to you our customers.
                            TEL:0123.456.789
                        </p>
                        <div class="footer-social">
                            <div id="root"></div>
                        </div>
                        <li><a href="#">Front page</a></li>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 col-xs-6">
                    @Html.Action("Loai", "Home")
                </div>
                <div class="col-md-3 col-sm-6 col-xs-6">
                    @Html.Action("Brands", "Home")
                </div>
            </div>
        </div>
    </div> <!-- End footer top area -->

    <div class="footer-bottom-area">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="copyright">
                        <p>&copy; 2019 uCommerce. Design by Ngoc</p>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- End footer bottom area -->
    <!-- Thêm script từ trang chủ: https://reactjs.org/ -->
    <script crossorigin src="https://unpkg.com/react@16/umd/react.development.js">
    </script>
    <script crossorigin src="https://unpkg.com/react-dom@16/umd/react-dom.development.js">
    </script>

    <!-- Thêm script Babel-core -->
    <!-- Babel-core giúp thực hiện việc viết code giống với html -->
    <script src="https:unpkg.com/babel-core@5.2.17/browser.min.js">
    </script>
    <script type="text/babel">
        ReactDOM.render(
        <div>
            <a href="https://www.facebook.com/Emirates-Sport-Store-1323213077817119/" target="_blank"><i class="fa fa-facebook"></i></a>

            <a href="https://www.youtube.com/watch?v=NnOU_KqI45k" target="_blank"><i class="fa fa-youtube"></i></a>
        </div>
        ,document.getElementById("root"))
    </script>
    <!-- Latest jQuery form server -->
    <script src="https://code.jquery.com/jquery.min.js"></script>

    <!-- Bootstrap JS form CDN -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

    <!-- jQuery sticky menu -->
    <script src="~/Scripts/owl.carousel.min.js"></script>
    <script src="~/Scripts/jquery.sticky.js"></script>

    <!-- jQuery easing -->
    <script src="~/Scripts/jquery.easing.1.3.min.js"></script>

    <!-- Main Script -->
    <script src="~/Scripts/main.js"></script>

    <!-- Slider -->
    <script src="~/Scripts/bxslider.min.js"></script>
    <script src="~/Scripts/script.slider.js"></script>
</body>
</html>
